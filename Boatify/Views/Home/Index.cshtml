@{
    ViewBag.Title = "ChuyenDI - Book Your Journey";
}

<div class="jumbotron text-center">
    <h1>ChuyenDI</h1>
    <p class="lead">Book your journey with ease and comfort</p>
    <p>
        <a href="@Url.Action("Search", "Tickets")" class="btn btn-primary btn-lg">Search Tickets</a>
    </p>
</div>

<div class="container">
    <div class="row">
        <div class="col-md-4">
            <h2>Search</h2>
            <p>Find the perfect ticket for your journey. Search by origin, destination and date.</p>
        </div>
        <div class="col-md-4">
            <h2>Book</h2>
            <p>Choose your seat and provide passenger information to book your ticket.</p>
        </div>
        <div class="col-md-4">
            <h2>Travel</h2>
            <p>Enjoy your journey with our comfortable service.</p>
        </div>
    </div>
</div>
@model IEnumerable<ChuyenDI.Models.Booking>

@{
    ViewBag.Title = "Booking History";
}

<div class="card">
    <div class="card-header">
        <h2>@ViewBag.Title</h2>
    </div>
    <div class="card-body">
        @if (!Model.Any())
        {
            <div class="alert alert-info">
                You haven't made any bookings yet.
            </div>
            <div>
                <a href="@Url.Action("Search", "Tickets")" class="btn btn-primary">Search Tickets</a>
            </div>
        }
        else
        {
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th>Booking #</th>
                            <th>Date</th>
                            <th>Route</th>
                            <th>Departure</th>
                            <th>Seat</th>
                            <th>Passenger</th>
                            <th>Price</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var booking in Model)
                        {
                            <tr>
                                <td>@booking.BookingId</td>
                                <td>@booking.BookingTime.ToString("yyyy-MM-dd")</td>
                                <td>@booking.Ticket.Route.Origin - @booking.Ticket.Route.Destination</td>
                                <td>@booking.Ticket.DepartureTime.ToString("yyyy-MM-dd HH:mm")</td>
                                <td>@booking.Seat.SeatNumber</td>
                                <td>@booking.PassengerName</td>
                                <td>@booking.TotalPrice.ToString("C0")</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
        <div class="mt-3">
            <a href="@Url.Action("Profile", "Account")" class="btn btn-outline-primary">Back to Profile</a>
            <a href="@Url.Action("Search", "Tickets")" class="btn btn-primary">Book New Ticket</a>
        </div>
    </div>
</div>